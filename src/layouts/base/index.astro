---
import '@fontsource/geist-sans/100.css';
import '@fontsource/geist-sans/200.css';
import '@fontsource/geist-sans/300.css';
import '@fontsource/geist-sans/400.css';
import '@fontsource/geist-sans/500.css';
import '@fontsource/geist-sans/600.css';
import '@fontsource/geist-sans/700.css';
import '@fontsource/geist-sans/800.css';
import '@fontsource/geist-sans/900.css';
import '@fontsource-variable/geist-mono';
import '@/styles/global.css';

// Import font files for preloading
import geistSans400 from '@fontsource/geist-sans/files/geist-sans-latin-400-normal.woff2?url';
import geistSans500 from '@fontsource/geist-sans/files/geist-sans-latin-500-normal.woff2?url';
import geistSans600 from '@fontsource/geist-sans/files/geist-sans-latin-600-normal.woff2?url';
import geistMono from '@fontsource-variable/geist-mono/files/geist-mono-latin-wght-normal.woff2?url';
import { ClientRouter } from 'astro:transitions';

import Header from './header/index.astro';

import InitTheme from '@/components/themes/init-theme.astro';
import { Metadata, type MetadataType } from '@/components/utils/metadata';

type Props = {
  metadata: MetadataType;
};

const { metadata } = Astro.props;

// Default favicon metadata
const defaultMetadata: MetadataType = {
  icons: {
    icon: '/favicon.ico',
    shortcut: '/favicon.ico',
  },
};

// Merge default metadata with provided metadata, with provided metadata taking precedence
const mergedMetadata: MetadataType = {
  ...defaultMetadata,
  ...metadata,
  icons: {
    ...defaultMetadata.icons,
    ...metadata.icons,
  },
};
---

<!doctype html>
<html lang="en">
  <head>
    <Metadata metadata={mergedMetadata} />
    <ClientRouter />
    <InitTheme />

    <!-- Font preloading for critical Geist Sans weights -->
    <link
      rel="preload"
      href={geistSans400}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href={geistSans500}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href={geistSans600}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <!-- Font preloading for Geist Mono variable -->
    <link
      rel="preload"
      href={geistMono}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-background text-foreground font-geist-sans antialiased">
    <Header>
      <slot name="mobile-nav" slot="mobile-nav" />
    </Header>
    <slot />
  </body>
</html>
