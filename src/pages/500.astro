---
import { Button } from '@/components/ui/button';
import type { MetadataType as Metadata } from '@/components/utils/metadata';
import { paths } from '@/config/paths';
import BaseLayout from '@/layouts/base/base.astro';

const metadata: Metadata = {
  title: '500 - Internal Server Error | Better Auth Doc',
  description: 'An internal server error occurred. Please try again later.',
};
---

<BaseLayout metadata={metadata}>
  <main
    class="relative flex h-[calc(100vh-10px-var(--nav-height))] flex-col items-center justify-center"
  >
    <div class="mb-8">
      <svg
        width="60"
        height="45"
        viewBox="0 0 60 45"
        fill="none"
        class="h-10 w-10"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M0 0H15V15H30V30H15V45H0V30V15V0ZM45 30V15H30V0H45H60V15V30V45H45H30V30H45Z"
          class="fill-foreground"
        >
        </path>
      </svg>
    </div>
    <h1 class="text-8xl font-normal">500</h1>
    <p class="mb-2 text-lg font-medium">Internal Server Error</p>
    <p class="text-muted-foreground mb-8 text-sm">
      Something went wrong on our end. Please try again in a moment.
    </p>
    <Button size="lg" className="px-8 py-3 text-base font-medium">
      <a href={paths.home.getHref()}>GO TO HOMEPAGE</a>
    </Button>
  </main>
</BaseLayout>
