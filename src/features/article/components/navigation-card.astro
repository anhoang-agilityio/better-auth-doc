---
import { ChevronLeft, ChevronRight } from 'lucide-react';

import { paths } from '@/config/paths';
import { cn } from '@/lib/utils';

type Article = {
  id: string;
  title: string;
  description: string;
};

type Props = {
  article: Article;
  direction: 'previous' | 'next';
};

const { article, direction } = Astro.props;
const isPrevious = direction === 'previous';
const href = paths.docs.getHref(article.id);
---

<a
  href={href}
  class={cn(
    'text-sm bg-card text-card-foreground hover:bg-accent/80 rounded-lg border p-4 shadow-md transition-colors @max-lg:col-span-full',
    isPrevious ? 'block' : 'flex flex-col items-end text-right',
  )}
>
  <h3
    class={cn(
      'flex items-center gap-1 mb-1 font-semibold',
      isPrevious ? '' : 'flex-row-reverse',
    )}
  >
    {
      isPrevious ? (
        <ChevronLeft className="size-4" />
      ) : (
        <ChevronRight className="size-4" />
      )
    }
    {article.title}
  </h3>
  <p class="text-muted-foreground my-0 ml-1 w-full truncate">
    {article.description}
  </p>
</a>
